{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Será só mais um clone do https://www.tabnews.com.br/ do https://curso.dev/ ? Veremos...",
  "main": "index.js",
  "scripts": {
    "dev:npm": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "dev": "./init-dev.sh",
    "stop": "npm run services:down && kill $(lsof -t -i:3000)",
    "services:up": "docker compose --env-file .env.development --file infra/compose.yaml up -d",
    "services:stop": "docker compose --env-file .env.development -f infra/compose.yaml stop",
    "services:down": "docker compose --env-file .env.development -f infra/compose.yaml down",
    "services:wait:database": "node --env-file=.env.development infra/scripts/services:wait:database.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "Rodrigo Rogovski",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "next": "15.1.7",
    "node-pg-migrate": "7.9.1",
    "pg": "8.13.3",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@types/jest": "29.5.14",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.20.1",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.5.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
